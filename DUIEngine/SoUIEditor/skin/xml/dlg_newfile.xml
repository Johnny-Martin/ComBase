<layer name="dlg_newfile" title="new file" width="400" height="300" appwin="0" ncRect="5,5,5,5" resize="1" nomaxsize="1">
  <body>
    <dlg name="maindlg" pos="0,0,-0,-0" class="cls_dlg_frame">
      <caption id="101" pos="0,0,-0,29">
        <text pos="11,9" class="cls_txt_red">Insert New File</text>
        <imgbtn id="1" name="btn_sys_close" skin="btn_sys_close"    pos="-45,0" tip="close" animate="1"/>
      </caption>
      <dlg pos="5,29,-5,-5" crtext="000000">
        <text pos="0,0" height="25">文件名:</text>
        <edit name="edit_src_file" pos="[5,0,-80,25" readonly="1" crbg="888888"/>
        <button name="btn_sel_file" pos="-75,0,-0,25">...</button>
        <text pos="0,40" height="25">资源名:</text>
        <edit name="edit_res_name" pos="[5,40" width="200" height="25"/>
        <text pos="0,80" height="25">资源类型:</text>
        <combobox name="cbx_res_type" pos="[5,80" width="100" align="left" height="25" dropdown="1" dropheight="250">
          <liststyle class="cls_border"  itemheight="30" crtext="000000" crseltext="FFFFFF" critembg="FFFFFF" critemselbg="000088"/>
          <items>
            <item text="XML" icon="1"/>
            <item text="ICON" icon="2"/>
            <item text="BMP" icon="3"/>
            <item text="IMGX" icon="4"/>
          </items>
        </combobox>

        <check name="chk_layout" pos="[10,80" height="25" show="0">布局文件</check>
        <text pos="0,120" height="25">资源路径:</text>
        <edit name="edit_res_path" pos="[5,120,-80,145"/>
        
        <hr pos="0,-50,-0,-48"/>
        <button id="1" pos="|-100,-25" pos2type="center" width="100" height="25">确定</button>
        <button id="2" pos="|100,-25" pos2type="center" width="100" height="25">取消</button>
      </dlg>
    </dlg>
  </body>
</layer>
